  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

/* styles.css */

/* 初始隱藏狀態：稍微往下並變透明 */
.tl-item.reveal {
  opacity: 0;
  transform: translateX(-30px); /* 從左側滑入的感覺 */
  transition: all 0.8s cubic-bezier(0.25, 1, 0.5, 1);
}

/* 當 IntersectionObserver 觸發並加上 .in 時 */
.tl-item.reveal.in {
  opacity: 1;
  transform: translateX(0);
}

/* 增加交錯出現的延遲感 (Staggered Delay) */
