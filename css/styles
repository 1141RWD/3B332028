  stroke-dasharray: 1000;
  stroke-dashoffset: 1000;
  opacity: 0;
}

.sig.start-animation .sig-path {
  opacity: 1;
  animation: drawSignature 3s cubic-bezier(0.45, 0, 0.55, 1) forwards;
}

/* 依序書寫順序延遲 */
.sig.start-animation .sig-path:nth-child(1) { animation-delay: 0.1s; } /* R */
.sig.start-animation .sig-path:nth-child(2) { animation-delay: 0.8s; } /* u */
.sig.start-animation .sig-path:nth-child(3) { animation-delay: 1.2s; } /* k */
.sig.start-animation .sig-path:nth-child(4) { animation-delay: 1.7s; } /* A */
.sig.start-animation .sig-path:nth-child(5) { animation-delay: 2.2s; } /* ♡ */
.sig.start-animation .sig-path:nth-child(6) { animation-delay: 2.8s; stroke-width: 4; } /* 底線 */

@keyframes drawSignature {
  to { stroke-dashoffset: 0; }
}
